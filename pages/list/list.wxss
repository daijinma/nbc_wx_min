.td2:last-child {
  border-right: none;    /* 单元格右线框 */
}
.tr2:last-child {
  border-bottom: none;   /* 单元格下线框 */
}

.tabs{
  position: absolute;
  right:1px;
  top: -7px;
  display: flex;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  overflow: hidden;
}

.tabs .item{
  font-size: 12px;
  background: #fff;
  padding:6px 10px;
  color: #000;
}

.tabs .item.current{
  background: #2c1348;
  color: #fff;
}
