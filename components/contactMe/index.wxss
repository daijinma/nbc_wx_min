/* components/contactMe/index.wxss */
.contact {
  z-index: 12;
  position: fixed;
  right: 0;
  width: 15vw;
  background: white;
  bottom: 20vh;
  padding: 5px;
  border-top-left-radius: 30px;
  border-bottom-left-radius: 30px;
  display: flex;
  align-items: center;
  box-shadow: 1px 1px 10px #797979;
}


.contact image {
  display: block;
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.contact view{
  padding-left: 6px;
  font-size: 12px;
} 
.contact .tips{
  font-size: 24rpx;
  color:brown;
} 

.contact view text{
  display: block;
  font-size: 10px;
  color: #333333;
} 

.modal-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal {
  background-color: #fff;
  width: 80%;
  padding-bottom: 20rpx;
  text-align: center;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
  position: relative;
  z-index: 10001;
}

.main-image {
  width: 100%;
  margin-bottom: 10rpx;
}

.description {
  font-size: 26rpx;
  /* line-height: 1.5; */
  color: #333;
  margin-bottom: 20rpx;
}

.close-button {
  background-color: #007aff;
  color: #fff;
  font-size: 16rpx;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
}