/* components/inputDialog/index.wxss */
.modal{
  position: fixed;
  left: 0%;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 100;
}
.modal .bg{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
}
.modal .content{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80vw;
  height: 80vh;
  overflow: scroll;
  background-color: #fff;
  padding: 2vw;
}
.form-input {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.label {
  width: 100rpx;
  font-size: 32rpx;
  color: #333;
}

.input {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 0 10rpx;
  font-size: 32rpx;
}

.item-cell {
  display: block;
  padding: 20rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-top: 1px solid #D9D9D9;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.add{
  margin: 30rpx auto 20rpx;
}